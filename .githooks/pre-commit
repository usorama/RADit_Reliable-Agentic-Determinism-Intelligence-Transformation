#!/bin/bash
# Pre-commit hook: Auto-regenerate codebase map if Python source files changed
#
# This hook ensures docs/codebase_map.json stays in sync with actual code.
# It only regenerates if relevant source files were modified.

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if any Python source files in packages/daw-agents/src are staged
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '^packages/daw-agents/src/.*\.py$' || true)

if [ -z "$STAGED_PY_FILES" ]; then
    # No Python source files changed, skip regeneration
    exit 0
fi

echo -e "${YELLOW}[pre-commit]${NC} Python source files changed, regenerating codebase map..."

# Check if Python is available
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}[pre-commit]${NC} python3 not found, skipping map regeneration"
    exit 0
fi

# Check if the gather script exists
GATHER_SCRIPT="scripts/gather_codebase_map.py"
if [ ! -f "$GATHER_SCRIPT" ]; then
    echo -e "${RED}[pre-commit]${NC} $GATHER_SCRIPT not found, skipping map regeneration"
    exit 0
fi

# Store the current map hash
OLD_HASH=""
if [ -f "docs/codebase_map.json" ]; then
    OLD_HASH=$(git hash-object docs/codebase_map.json 2>/dev/null || echo "")
fi

# Regenerate the codebase map
if python3 "$GATHER_SCRIPT" --incremental 2>/dev/null; then
    # Check if map changed
    NEW_HASH=$(git hash-object docs/codebase_map.json 2>/dev/null || echo "")

    if [ "$OLD_HASH" != "$NEW_HASH" ]; then
        echo -e "${GREEN}[pre-commit]${NC} Codebase map updated, staging changes..."
        git add docs/codebase_map.json
    else
        echo -e "${GREEN}[pre-commit]${NC} Codebase map unchanged"
    fi
else
    echo -e "${YELLOW}[pre-commit]${NC} Map regeneration failed (non-blocking), continuing commit"
fi

exit 0
